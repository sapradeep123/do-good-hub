# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/do_good_hub
DATABASE_URL_SYNC=postgresql://username:password@localhost:5432/do_good_hub

# Mock Database Mode (set to true for development without database)
MOCK_DATABASE=false

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Application Settings
APP_NAME=Do Good Hub API
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Trusted Hosts
TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@dogoodhub.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379/0

# Payment Gateway Configuration (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Social Authentication (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Monitoring and Analytics (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id